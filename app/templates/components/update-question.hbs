{{#if updateQuestion}}
  <div>
    <form>
      <div class="form-group">
        <label for="screenName">Username</label>
        {{input value=screenName id="screenName"}}
      </div>

      <div class="form-group">
        <label for="query">Ask your question here.</label>
        {{input value=query id="query"}}
      </div>

      <div class="form-group">
        <label for="content">Additional Details</label>
        {{input value=content id="content"}}
      </div>

      <button type="button" class="btn-lg btn-primary" {{action 'update' question}}>Update</button>
    </form>
  </div>
{{else}}
  <button class="btn-lg btn-primary" {{action 'updateQuestionShow'}}>Update Question</button>
{{/if}}
