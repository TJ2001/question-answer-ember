{{#if askQuestion}}
  <h4>{{question.screenName}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="screenName">Username</label>
        {{input value=screenName id="screenName"}}
      </div>

      <div class="form-group">
        <label for="query">Ask your question here.</label>
        {{input value=query id="query"}}
      </div>

      <div class="form-group">
        <label for="content">Additional Details</label>
        {{input value=content id="content"}}
      </div>

      <button {{action 'askNewQuestion'}}>Ask</button>
    </form>
  </div>
{{else}}
  <button class="btn-lg btn-danger" {{action 'askQuestionFormShow'}}>Ask a Question</button>
{{/if}}
