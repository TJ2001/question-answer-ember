{{#if askQuestion}}
  <h4>Update {{question.screenName}}'s {{question.avatar}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="screenName">Username</label>
        {{input value=screenName id="screenName" placeholder=question.screenName}}
      </div>

      <div class="form-group">
        <label for="avatar">Link your Avatar</label>
        {{input value=avatar id="avatar" placeholder=question.avatar}}
      </div>

      <div class="form-group">
        <label for="query">Ask your question here.</label>
        {{input value=query id="query" placeholder=question.query}}
      </div>

      <div class="form-group">
        <label for="content">Additional Details</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>

      <button {{action 'askNewQuestion'}}>Ask</button>
    </form>
  </div>
{{else}}
  <button class="btn-lg btn-danger" {{action 'askQuestionFormShow'}}>Ask a Question</button>
{{/if}}
